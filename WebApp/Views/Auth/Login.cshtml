@model UserLoginDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href='~/css/Login.css'>
    <title>Login</title>
</head>
<body>
    <div class="login">
        <form method="post" asp-action="Login" asp-controller="Auth">
            <div class="top">
                <h2>Login or Register</h2>
            </div>
            <div class="center">
                <label for="username">Email or Username</label>
                <input type="text" id="username" placeholder="example@gmail.com">
                <label for="passwd">Password</label>
                <input type="password" name="" id="passwd">
            </div>
            <div class="bottom">
                <button type="submit" asp-controller="Auth" asp-action="Login">Sign In</button>
                <a href="#" id="sign-up" asp-controller="Auth" asp-action="Register">Sign Up</a>
            </div>
        </form>
    </div>
</body>
</html>
